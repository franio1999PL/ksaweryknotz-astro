---

    type TFooterLink = {
    name: string
    url: string
    newTab?: boolean
}

    const FooterLinks: TFooterLink[] = [
    {
        name: 'Knotz.Link',
        url: 'https://knotz.link',
        newTab: true
    },
    {
        name: 'SzansaSpotkania.pl',
        url: 'https://szansaspotkania.pl',
        newTab: true
    },
    {
        name: 'Biografia',
        url: '#'
    },
    {
        name: 'Działalność',
        url: '#'
    },
    {
        name: 'Knotakt',
        url: '#'
    },
    ]
---


<footer class="footer">
    <div class="footer__h1-wrapper">
        <h1 class="footer__h1">KsaweryKnotz.PL</h1>
    </div>
    <ul class="footer__list">
        {
            FooterLinks.map(({name,url,newTab})=>(
            <li class="footer__list-item">
                <a class="footer__link" href={url} target={newTab ? '_blank': ''}>{name}</a>    
            </li>
            ))
        }
        <li class="footer__list-item">
            <button class="footer__btn">Wesprzyj mnie!</button>
        </li>
    </ul>
</footer>

<style>
    .footer {
        width: 100%;
        background: #000;
        display: flex;
        justify-content: space-between;
        /* padding: 16px; */
    }

    .footer__h1-wrapper {

    }

    .footer__h1 {
        margin-left: 36px;
        margin-top: 18px;
        color: #fff;
        font-size: 36px;
        font-weight: 700;
    }

    .footer__list {
        display: flex;
        flex-direction: column;
        gap: 27px;
        margin-right: 36px;
        margin-top: 18px;
        margin-bottom: 18px;
    }

    .footer__list-item {
        /* padding: 4px; */
        text-align: right;
    }
    .footer__link {
        color: #fff;
        font-size: 16px;
        font-weight: 700;

    }

    .footer__btn {
        color: #fff;
        font-size: 16px;
        font-weight: 700;
        border: 1px solid #fff;
        padding: 3px 6px;
        border-radius: 2px;
    }
</style>